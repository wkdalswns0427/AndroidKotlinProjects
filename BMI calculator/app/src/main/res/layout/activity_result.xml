            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/resultW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="24.111" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="@string/resultTextIdx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/resultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="B"
            />

    </LinearLayout>


</LinearLayout>
